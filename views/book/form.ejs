<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="desc"
                class="form-control"
                id="inputDesc"
        ><%= book.desc %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthor">Автор</label>
        <input type="text"
               value="<%= book.author %>"
               name="author"
               class="form-control"
               id="inputAuthor">
    </div>

    <div class="form-group">
        <label for="inputFavorite">Фаворит</label>
        <input type="text"
               value="<%= book.favorite %>"
               name="favorite"
               class="form-control"
               id="inputFavorite">
    </div>

    <div class="form-group">
        <label for="inputFileCover">Покрытие</label>
        <input type="text"
               value="<%= book.fileCover %>"
               name="fileCover"
               class="form-control"
               id="inputFileCover">
    </div>

    <div class="form-group">
        <label for="inputFileName">Имя файла</label>
        <input type="text"
               value="<%= book.fileName %>"
               name="fileName"
               class="form-control"
               id="inputFileName">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
